        xmlns:local="clr-namespace:DualTableTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgrHours" HorizontalAlignment="Left" Height="465" Margin="10,94,0,0" VerticalAlignment="Top" Width="772"/>
